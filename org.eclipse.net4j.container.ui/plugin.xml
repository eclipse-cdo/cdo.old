<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.eclipse.net4j.container.ui"
            name="Net4j">
      </category>
      <view
            category="org.eclipse.net4j.container.ui"
            class="org.eclipse.net4j.container.internal.ui.views.Net4jExplorerView"
            icon="icons/sample.gif"
            id="org.eclipse.net4j.container.internal.ui.views.Net4jExplorerView"
            name="Net4j Explorer">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="org.eclipse.net4j.container.internal.ui.views.Net4jExplorerView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
