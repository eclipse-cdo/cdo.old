<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>
   
     <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.eclipse.net4j.spring.test.actionSet"
            label="Sample Action Set"
            visible="true">
         <menu
               id="sampleMenu"
               label="Sample &amp;Menu">
            <separator name="sampleGroup"/>
         </menu>
         <action
               class="org.eclipse.net4j.spring.test.actions.SpringTestAction"
               icon="icons/sample.gif"
               id="org.eclipse.net4j.spring.test.actions.SpringTestAction"
               label="&amp;Spring Test"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               tooltip="Hello, Eclipse world"/>
      </actionSet>
   </extension>
   
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.net4j.spring.test.preferences.SamplePreferencePage"
            id="org.eclipse.net4j.spring.test.preferences.SamplePreferencePage"
            name="Sample Preferences"/>
   </extension>
   
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.eclipse.net4j.spring.test.preferences.PreferenceInitializer"/>
   </extension>

</plugin>
